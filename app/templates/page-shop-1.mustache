<div class="page-shop-content">
    <div class="maxWidth">
        <div class="shopImg">
            <img src="{{SHOP.RESPONSEDATA.logoPath}}">
        </div>
    </div>
    <div class="shopInfo">
        <div class="maxWidth">
            <span>
                {{#each SHOP.RESPONSEDATA.commoditySearchList}}
                    {{#setRenderRange @index 1}}{{commodityName}}{{/setRenderRange}}
                {{/each}}
            </span>
            <span class="pull-right">
                {{SHOP.RESPONSEDATA.memberName}}
            </span>
        </div>
    </div>
    <div class="maxWidth">
        {{#each SHOP.RESPONSEDATA.commoditySearchList}}
            {{#setRenderRange @index 1}}
                <div class="shopDetails">
                    <div class="imgs">
                        <div class="showImg">
                            <img src="{{#if picture1}}{{getImgUrl picture1}}{{/if}}">
                        </div>
                        <div class="otherImg">
                            <img src="{{#if picture1}}{{getImgUrl picture1}}{{/if}}" class="active">
                            <img src="{{#if picture2}}{{getImgUrl picture2}}{{/if}}">
                            <img src="{{#if picture3}}{{getImgUrl picture3}}{{/if}}">
                            <img src="{{#if picture4}}{{getImgUrl picture4}}{{/if}}">
                        </div>
                    </div>
                    <div class="infos">
                        <div class="title">{{commodityName}}</div>
                        <div class="price"><span>价格：</span>
                            <span class="priceColor">{{format_Money price}}</span>
                        </div>
                        <div class="size"><span>尺码：</span>
                            <span class="inlineBlock active">{{size}}</span>
                        </div>
                        <div class="color"><span>颜色：</span>
                            <span class="inlineBlock active">{{color}}</span>
                        </div>
                        <div class="quantity"><span>库存：</span>
                            <span>{{quantity}}{{uom}}</span>
                        </div>
                    </div>
                </div>
            {{/setRenderRange}}
        {{/each}}
    </div>
    <div class="maxWidth">
        <div class="shopInfo">
            <div class="shopInfo-left">
              <ul class="classify">
                  <span>店内分类</span>
                  <li class="active"><a href="#">2017春装上新</a></li>
                  <li><a href="#">2017夏装上新</a></li>
                  <li><a href="#">实体新品</a></li>
                  <li><a href="#">运动时尚</a></li>
                  <li><a href="#">上装</a></li>
                  <li><a href="#">外套</a></li>
                  <li><a href="#">裤装</a></li>
              </ul>
              <ul class="collect">
                    <span>热门收藏</span>
                    <li><a href="/app/webpage/shop.html">
                        <img src="/app/images/test/test_a1.jpg">
                        <div class="price">￥199.00</div>
                    </a></li>
                    <li><a href="/app/webpage/shop.html">
                        <img src="/app/images/test/test_a3.jpg">
                        <div class="price">￥199.00</div>
                    </a></li>
                    <li><a href="/app/webpage/shop.html">
                        <img src="/app/images/test/test_a4.jpg">
                        <div class="price">￥199.00</div>
                    </a></li>
                    <li><a href="/app/webpage/shop.html">
                        <img src="/app/images/test/test_a5.jpg">
                        <div class="price">￥199.00</div>
                    </a></li>
              </ul>
            </div>
            <div class="shopInfo-right">
                <div class="header">
                    <a class="shopITem">商品信息</a>
                </div>
                <div class="shopDescription">
                    {{#each SHOP.RESPONSEDATA.commoditySearchList}}
                        {{#setRenderRange @index 1}}
                            <ul>
                                <li>
                                    <span>商品名称：{{commodityName}}</span>
                                </li>
                                <li>
                                    <span>商品介绍：{{commodityIntroduction}}</span>
                                </li>
                                <li>
                                    <span>包装与规格：{{packingSpecification}}</span>
                                </li>
                                <li>
                                    <span>使用说明： {{instructions}}</span>
                                </li>
                                <li>
                                    <span>购买及售后：{{instructions}}</span>
                                </li>
                            </ul>
                        {{/setRenderRange}}
                    {{/each}}
                </div>
                <div class="shopDescriptionImg">
                    <img src="/app/images/test/test_shop_11.png">
                    <img src="/app/images/test/test_shop_12.png">
                </div>
            </div>
        </div>
    </div>
</div>